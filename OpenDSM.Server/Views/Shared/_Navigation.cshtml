@{
    bool isLoggedIn = (bool)(ViewData["IsLoggedIn"] ?? false);
}
<nav>
    <a class="brand" href="/">
        <img src="/assets/images/logo.svg" alt="">
        <h4>OpenDSM</h4>
    </a>
    <div id="nav-items">
        <a href="/" class="btn secondary">Home</a>
        @if (isLoggedIn)
        {
            <a href="/products/create/" class="btn secondary">Create Product</a>
            <span class="separator vertical"></span>
            <a href="/profile/" class="profile-image" style="background-image: url('/assets/images/testing/profile-image.jpg');"></a>
        }
        else
        {
            <span class="separator vertical"></span>
            <a href="/auth/signup" class="btn secondary">Sign Up</a>
            <a href="/auth/login" class="btn">Login</a>
        }
    </div>
</nav>